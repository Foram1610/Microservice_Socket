    <style>
        body {
            /* background-color: gay; */
            font-family: 'Montserrat', sans-serif;
        }

        hr {
            background-color: #eee;
            border: 0 none;
            color: #eee;
            height: 1px;
        }

        .wc-message {
            font-family: 'Pushster', cursive;
            line-height: 1.6em;
            font-size: 320%;
        }

        .large-otp {
            text-align: center;
            letter-spacing: 5px;
            font-size: 320%;
        }

        .emphasized {
            color: rgb(3, 7, 24);
        }

        .vertical {
            border-right: 1px solid #eee;
            padding-right: 5px;

        }

        .top-image {
            text-align: center;
        }

        .welcome {
            font-weight: bold;
            text-shadow: 2px 7px 5px rgba(0, 0, 0, 0.3),
                0px -4px 10px rgba(255, 255, 255, 0.3);
        }

        .main-div {
            display: flex;
            justify-content: center;
        }

        .body-div {
            width: 650px;
            padding: 10px;
            /* margin: 45px 75px 100px; */
            /* background-color: #eee; */
        }

        .button {
            text-align: center;
            margin: 30px 0;

        }

        button {
            padding: 10px 20px;
            background-color: rgb(6, 163, 163);
            border: 0;
            color: #fff
        }

        .icons {
            display: flex;
            justify-content: center;
        }

        @media screen and (max-width: 792px) {
            .body-div {
                width: 100%;
                /* margin: 45px; */

            }
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

</head>

